
@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions
@model Misitu.Users.Dto.CreateUserInput


<div class="panel panel-info">
    <div class="panel-heading">
        <div class="pull-left"><span>New User</span></div>
        <div class="clearfix"></div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="panel-body">
            <div class="padd">
             
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-1">Applicant Name</label>
                        <div class="col-md-11">
                            <input type="text"  class="form-control" readonly value="@ViewBag.Applicant.Name">
                            <input type="hidden" class="form-control" name="ApplicantId" value="@ViewBag.Applicant.Id">
                        </div>

                       
                    </div>
                    <div class="form-group">
                        <label class="col-md-1">First Name</label>
                        <div class="col-md-5">
                            <input type="text" name="Name" class="form-control" required maxlength="@Misitu.Users.User.MaxNameLength">
                        </div>

                        <label class="col-md-1">Surname</label>
                        <div class="col-md-5">
                            <input type="text" name="Surname" class="form-control" required maxlength="@Misitu.Users.User.MaxSurnameLength">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1">Username</label>
                        <div class="col-md-5">
                            <input class="form-control" type="text" name="UserName" required maxlength="@AbpUserBase.MaxUserNameLength" minlength="2">
                        </div>

                        <label class="col-md-1">Email Address</label>
                        <div class="col-md-5">
                            <input type="email" name="EmailAddress" class="form-control" maxlength="@AbpUserBase.MaxEmailAddressLength">
                        </div>
                    </div>

                </div>
            </div>
            <div class="widget-foot">
               
                <button type="submit" class="btn btn-primary blue pull-right"><i class="fa fa-save"></i> <span>Finish</span></button>
            </div>
        </div>
    }
</div>

