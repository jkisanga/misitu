<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TFS Portal</title>
    <link type="text/css" href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/Content/bootstrap/theme.css" rel="stylesheet">
    <link type="text/css" href="~/Content/bootstrap/awesome/css/font-awesome.css" rel="stylesheet">

 
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TFS Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="navbar" class="navbar-collapse collapse">             
                   
                    @Html.Partial("_LoginPartial")          
             
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="sidebar">
                        <ul class="widget widget-menu unstyled nav">
                            @Html.Partial("_Menu")
                                                    
                            
                        </ul>
                        <!--/.widget-nav-->
                        <!--/.widget-nav-->
                     
                    </div>
                    <!--/.sidebar-->
                </div>
                <!--/.span3-->
                <div class="col-lg-9">
                    <div class="content">
                        <!--/#btn-controls-->
                        <div class="module">

                            <div class="module-body">
                                @{Html.RenderPartial("Message");}
                                @RenderBody()
                               
                            </div>
                        </div>
                        <!--/.module-->

                    </div>
                    <!--/.content-->
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>


   
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - TFS</p>
        </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
