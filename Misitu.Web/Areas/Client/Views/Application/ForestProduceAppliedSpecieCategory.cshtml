@model Misitu.Applicants.ForestProduce.CreateForestProduceAppliedSpecieCategory
@{
    ViewBag.Title = "Applied Specie Category";
}
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="pull-left"><span>Specie Category </span></div>
        <div class="clearfix"></div>
    </div>
    <div class="panel-body">
        <div class="padd">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <input type="hidden" name="FinancialYearId" value="@ViewBag.FinancialYearId" />
                    <input type="hidden" name="ForestProduceRegistrationId" value="@ViewBag.ForestProduceRegistration.Id" />
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Volume, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Volume, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Volume, "", new { @class = "text-danger" })
                        </div>

                        @Html.Label("Specie Category ", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownList("SpecieCategoryId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SpecieCategoryId, "", new { @class = "text-danger" })
                        </div>

                    </div>
                                    
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2 pull-right">
                            <input type="submit" value="Finish" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
            </div>
</div>
</div>