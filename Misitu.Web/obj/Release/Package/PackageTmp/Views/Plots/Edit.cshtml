@model Misitu.PlotScalling.PlotDto

@{
    ViewBag.ActiveMenu = "Plot Scalling"; //The menu item will be active for this page.
    ViewBag.Title = "Plot";
}

<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Edit Plot</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="widget-content">
            <div class="padd">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.CompartmentId)


                    <div class="form-group">
                        @Html.LabelFor(model => model.CompartmentId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" value="@Model.Compartment.Name" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.CompartmentId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                </div>
            <div class="widget-foot">
                <a href="@Url.Action("Index","Plots",new { Id = Model.Compartment.Id})" class="btn btn-default">Back</a>
                <input type="submit" value="Update" class="pull-right btn btn-primary" />
                <div class="clearfix"></div>
            </div>
            </div>
                }
    </div>

              
