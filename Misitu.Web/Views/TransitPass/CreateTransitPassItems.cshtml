@model Misitu.TransitPasses.TransitPassDto
@{
    ViewBag.ActiveMenu = "Transit Passes"; //The menu item will be active for this page.
    ViewBag.Title = "Transit Passes";
}

<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Create Transit Pass Items For @Model.Id </div>
        <div class="widget-icons pull-right">

        </div>
        <div class="clearfix"></div>
    </div>
    <div class="widget-content">
        <div class="padd">

            <div class="form-horizontal">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                       
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <input name="TransitPassId" value="@Model.Id" type="hidden" />
                           
                        </div>
                   
                    </div>


                        <table id="myTable" class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Specie</th>
                                    <th>Unit Measure</th>
                                    <th>Quantity</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <select name="ActivityId[]" class="form-control">
                                            @foreach (var item in ViewBag.Activities)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <select id="SpecieId" name="SpecieId[]" class="form-control">
                                            <option value="select">Select</option>
                                            @foreach (var item in ViewBag.Species)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <select id="SpecieId" name="UnitMeasureId[]" class="form-control">
                                            <option value="select">Select</option>
                                            @foreach (var item in ViewBag.UnitMeasures)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </td>
                                    <td><input type="text" name="Quantity[]" class="form-control"></td>
                                    <td></td>
                                </tr>

                            </tbody>
                            <tbody>
                                <tr id="totals">
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>

                        <button type="button" class="btn btn-success" id="addrow">Add</button>

                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-0 col-md-10">
                                <input type="submit" value="Save & Finish" class="btn btn-primary pull-right" />
                            </div>
                        </div>
                }
            </div>
        </div>
    </div>
</div>

<table id="newrow" style="display:none">
    <tr>
        <td>
            <select name="ActivityId[]" class="form-control">
                @foreach (var item in ViewBag.Activities)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </td>
        <td>
            <select id="SpecieId" name="SpecieId[]" class="form-control">
                <option value="select">Select</option>
                @foreach (var item in ViewBag.Species)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </td>
        <td>
            <select id="SpecieId" name="UnitMeasureId[]" class="form-control">
                <option value="select">Select</option>
                @foreach (var item in ViewBag.UnitMeasures)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </td>
        <td><input type="text" name="Quantity[]" class="form-control"></td>
        <td><button type="button" class="delete btn-danger">Delete</button>
    </tr>
</table>

@section scripts
{
    <script type="text/javascript">

        var body = $('#myTable').children('tbody').first();

        body.on('change', 'input[type="text"]', function () {

            var cells = $(this).closest('tr').children('td');
            var value2 = cells.eq(1).find('input').val();
            var value3 = cells.eq(2).find('input').val();
       
        });

        $('#addrow').click(function () {
            var clone = $('#newrow').clone();
            // update indexers etc.
            var newrow = clone.find('tr');
            body.append(newrow);
        });

        body.on('click', '.delete', function () {
            var row = $(this).closest('tr');
            row.remove();           
        });

    </script>
}

