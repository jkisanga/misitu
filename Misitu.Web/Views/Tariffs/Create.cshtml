@model System.Data.DataTable
@using System.Data

@{
    ViewBag.ActiveMenu = "Setup"; //The menu item will be active for this page.
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "Tariffs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="widget">
        <div class="widget-head">
            <div class="pull-left">New Tarrif</div>
            <div class="widget-icons pull-right">

            </div>
            <div class="clearfix"></div>
        </div>
        <div class="widget-content">
            <div class="padd">             
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.Label("Upload Tariff", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                <input class="form-control" type="file" id="file" name="file" />

                            </div>

                        </div>
                    </div>
                
            </div>
            <div class="widget-foot">
                <a href="@Url.Action("Index")" class="pull-left btn btn-default">
                    <i class="icon-backward"></i> Back
                </a>
                <button type="submit" class="pull-right btn btn-primary"><i class="icon-upload"></i> Upload</button>
                <div class="clearfix"></div>

            </div>
        </div>
    </div>
}

