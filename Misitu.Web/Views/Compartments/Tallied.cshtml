@model IEnumerable<Misitu.PlotScalling.Dto.CompartmentDto>

@{
    ViewBag.ActiveMenu = "Harvest Licensing"; //The menu item will be active for this page.
    ViewBag.Title = "Compartments";
}


<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Tallied Compartments</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="widget-content">
        <div class="padd">

            <table class="table table-bordered">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayName("Compartment")
                        </th>
                        <th>
                            @Html.DisplayName("Range")
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Species)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PlantedYear)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Age)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Area)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EstimatedVolume)
                        </th>                      
                        <th>
                            @Html.DisplayName("Tariff Number")
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Range.Name)
                        </td>
                                           
                        <td>
                            @Html.DisplayFor(modelItem => item.Species)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlantedYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstimatedVolume)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.TariffNumber)
                        </td>
                        <td>
                            @Html.ActionLink("Plots", "Tallied", "Plots", new { id = item.Id }, null)
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>
    </div>
