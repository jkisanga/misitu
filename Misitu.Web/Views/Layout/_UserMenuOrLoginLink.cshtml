@model Misitu.Web.Models.Layout.UserMenuOrLoginLinkViewModel
@if (Model.LoginInformations != null)
{
    <li class="dropdown pull-right">
        <a  class="dropdown-toggle " href="#" data-toggle="dropdown">
        <i class="icon-user"></i> <span>@Html.Raw(Model.GetShownLoginName())</span> <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Logout", "Account")"><i class="fa fa-sign-out"></i> @L("Logout")</a></li>
            <li><a href="#"><i class="icon-user"></i> Profile</a></li>
        </ul>
    </li>
}
else
{
    <li><a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in"></i> @L("LogIn")</a></li>
}

