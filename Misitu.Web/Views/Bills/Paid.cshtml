@model IEnumerable<Misitu.Billing.Dto.BillDto>

@{
    ViewBag.Title = "Bills";
    ViewBag.ActiveMenu = "Billing";
}
<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Paid Bills</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="widget-content">
        <div class="padd">
            <table class="table table-bordered">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayName("Bill Holder")
                        </th>
                        <th>
                            @Html.DisplayName("Station")
                        </th>
                        <th>
                            @Html.DisplayName("Paid Amount")
                        </th>
                        <th>
                            @Html.DisplayName("Paid Date")
                        </th>


                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Dealer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Station.Name)
                        </td>
                       
                        <td>
                            @String.Format("{0:#,###0.00}", item.PaidAmount)                            
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PaidDate)
                        </td>

                    </tr>
                }

            </table>
            </div>
        </div>
    </div>
