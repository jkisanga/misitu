@model Misitu.Billing.Dto.BillDto

@{
    ViewBag.ActiveMenu = "Billing";
    ViewBag.Title = "Bill";
}

<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Confirm</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="widget-content">
            <div class="padd">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                  
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.DealerId)

                    <div class="row">

                        <fieldset class="col-md-6">
                            <legend>Bill Info</legend>

                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td><label>Bill Payer</label></td>
                                        <td><input class="form-control" readonly value="@Model.Dealer.Name" /></td>
                                    </tr>
                                    <tr>
                                        <td><label>Bill Description</label></td>
                                        <td><textarea class="form-control" readonly>@Model.Description</textarea></td>
                                    </tr>
                                    <tr>
                                        <td><label>Issued Date</label></td>
                                        <td><input class="form-control" readonly value="@Model.IssuedDate.ToShortDateString()" /></td>
                                    </tr>

                                    <tr>
                                        <td><label>Expired Date</label></td>
                                        <td><input class="form-control" readonly value="@Model.ExpiredDate.ToShortDateString()" /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </fieldset>

                        <fieldset class="col-md-6">


                            <legend>Bill Summary</legend>
                            <table class="table table-bordered col-md-5">
                                <tbody>
                                    <tr>
                                        <td><label>Control Number </label></td>
                                        <td><input class="form-control" readonly value="@Model.ControlNumber" /></td>
                                    </tr>
                                    <tr>
                                        <td><label>Currency </label></td>
                                        <td><input class="form-control" readonly value="@Model.Currency" /></td>
                                    </tr>
                                    <tr>
                                        <td><label>Bill Amount</label></td>
                                        <td><input class="form-control" readonly value="@Model.BillAmount" /></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2"><label class="text-warning">Payment confirmation</label></td>
                             
                                    </tr>
                                    <tr>
                                        <td><label>Enter Paid Amount</label></td>
                                        <td>@Html.TextBox("Amount", null, new { @class = "form-control", required = "required" })</td>
                                    </tr>
                                </tbody>
                            </table>
                        </fieldset>


         


                    </div>

                                  
                </div>
                </div>
            <div class="widget-foot">
                <a href="@Url.Action("Index")" class="btn btn-default">Back</a>
                <input type="submit" value="Confirm" class="pull-right btn btn-primary" />
                <div class="clearfix"></div>
            </div>
            </div>
                }
    </div>


