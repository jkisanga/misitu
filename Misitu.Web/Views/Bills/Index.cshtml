@model IEnumerable<Misitu.Billing.Dto.BillDto>

@{
    ViewBag.Title = "Bills";
    ViewBag.ActiveMenu = "Billing";
}


<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Pending Bills</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="widget-content">
        <div class="padd">
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayName("Bill Holder")
                        </th>
                        <th>
                            @Html.DisplayName("Bill Number")
                        </th>
                        <th>
                            @Html.DisplayName("Amount")
                        </th>
                        <th>
                            @Html.DisplayName("Currency")
                        </th>
                        <th>
                            @Html.DisplayName("Date of Issue")
                        </th>
                        <th>
                            @Html.DisplayName("Date of Expire")
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Applicant.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ControlNumber)
                        </td>
                        <td>
                            @String.Format("{0:#,###0.00}", item.BillAmount)                           
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Currency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssuedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpiredDate)
                        </td>
                        <td>
                            @Html.ActionLink("View", "Details", new { id = item.Id })                          
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>
    </div>
