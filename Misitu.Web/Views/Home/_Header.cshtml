@model Misitu.Layout.Dto.HeaderDto

<div class="container">
    <div class="row">

        <!-- Logo section -->
        <div class="col-md-3">
            <!-- Logo. -->
            <div class="logo">
                <h1>
                    <img style="height:50px;" src="~/images/tfs.png" />
                    <a href="#"><span class="bold">TFS-MIS</span></a>
                </h1>
                <p class="meta">TFS-Management Information System</p>
            </div>
            <!-- Logo ends -->
        </div>


        <!-- Data section -->

        <div class="col-md-4">
            <div class="header-data">

                <!-- Traffic data -->
                <div class="hdata">
                    <div class="mcol-left">
                        <!-- Icon with red background -->
                        <i class="icon-user bblue"></i>
                    </div>
                    <div class="mcol-right">
                        <!-- Number of visitors -->
                        <p><a href="#">@Model.dealers</a> <em>Dealers</em></p>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <!-- Members data -->
                <div class="hdata">
                    <div class="mcol-left">
                        <!-- Icon with blue background -->
                        <i class="icon-signal bred"></i>
                    </div>
                    <div class="mcol-right">
                        <!-- Number of visitors -->
                        <p><a href="#">@Model.licenses</a> <em>Permits</em></p>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <!-- revenue data -->
                <div class="hdata">
                    <div class="mcol-left">
                        <!-- Icon with green background -->
                        <i class="icon-money bgreen"></i>
                    </div>
                    <div class="mcol-right">
                        <!-- Number of visitors -->
                        <p><a href="#">@Model.bills</a><em>Bills</em></p>
                    </div>
                    <div class="clearfix"></div>
                </div>

            </div>
        </div>

        <!--  section -->
        <div class="col-md-5">
            <ul class="nav nav-pills">

                <!-- Comment button with number of latest comments count -->
                <li class="dropdown dropdown-big">     
                    <a href="#">
                        <i class="icon-calendar"></i> Financial Year <span class="label label-info">@Model.financialYear.Name</span>
                    </a>             
                        
                </li>
                <li class="dropdown dropdown-big">
                    <a href="#">
                        <i class="icon-desktop"></i> Station <span class="label label-primary">@Model.UserInfo.station.Name</span>
                    </a>
                </li>
                </ul>


                   
                    <div class="clearfix"></div>

        </div>
         

        </div>
</div>
