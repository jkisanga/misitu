@using Abp.Authorization.Users
@using Abp.Web.Mvc.Extensions
@model Abp.Application.Services.Dto.ListResultDto<Misitu.Users.Dto.UserListDto>
@{
    ViewBag.ActiveMenu = "Setup"; //The menu item will be active for this page.
    ViewBag.Title = L("Users");

}
@section scripts
{
    @Html.IncludeScript("~/Views/Users/Index.js")
}

            <div class="widget">
                <div class="widget-head">
                    <div class="pull-left">@L("Users")</div>
                    <div class="widget-icons pull-right text-info">
                        <a href="@Url.Action("Create")" class="" >
                            <small class="text-info"><i class="icon-plus"></i> Create New</small>
                        </a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                    <div class="padd">

                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@L("UserName")</th>
                                    <th>@L("FullName")</th>
                                    <th>@L("EmailAddress")</th>
                                    <th>@L("IsActive")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Items)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.FullName</td>
                                        <td>@user.EmailAddress</td>
                                        <td>@L(user.IsActive ? "Yes" : "No")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>                   
                </div>
                </div>

