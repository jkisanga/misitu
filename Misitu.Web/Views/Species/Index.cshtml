@model IEnumerable<Misitu.Species.Dto.SpecieDto>

@{
    ViewBag.ActiveMenu = "Setup"; //The menu item will be active for this page.
    ViewBag.Title = "Species";
}

<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Species</div>
        <div class="pull-right">
            <a href="@Url.Action("Create")">
                <small class="text-info"><i class="icon-plus"></i> Create New</small>
            </a>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="widget-content">
        <div class="padd">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EnglishName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CommonName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SwahiliName)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.EnglishName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CommonName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SwahiliName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

            </table>
        </div>
    </div>
</div>
