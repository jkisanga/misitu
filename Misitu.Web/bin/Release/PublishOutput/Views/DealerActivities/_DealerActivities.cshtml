@model IEnumerable<Misitu.Registration.Dto.DealerActivityDto>

@{
    ViewBag.ActiveMenu = "Registration"; //The menu item will be active for this page.
    ViewBag.Title = "Dealer Activities";
}

<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Dealer: @ViewBag.Dealer.Name</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="widget-content">
        <div class="padd">
            <table class="table">
                <tr>

                    <th>
                        @Html.DisplayName("Description")
                    </th>
                    <th>
                        @Html.DisplayName("Fee")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Activity.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity.Fee)
                        </td>
                        <td>
                            @Html.ActionLink("Remove", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="widget-foot">
            <a href="@Url.Action("Create", "DealerActivities", new { id = ViewBag.Dealer.Id }, null)" class="btn btn-default">Back</a>
            <a href="@Url.Action("Create", "Bills", new { id = ViewBag.Dealer.Id }, null)" class="btn btn-primary pull-right">Save & Continue</a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

