@model Misitu.PlotScalling.Dto.CreateCompartmentInput

@{
    ViewBag.ActiveMenu = "Plot Scalling"; //The menu item will be active for this page.
    ViewBag.Title = "Compartments";
}

<div class="widget">
    <div class="widget-head">
        <div class="pull-left">New Compartment</div>
        
        <div class="clearfix"></div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="widget-content">
            <div class="padd">
              
                @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="col-md-2 control-label">Name</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required="required" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-md-2 control-label">Range</label>
                        <div class="col-md-4">

                            @Html.DropDownList("RangeId", null, " ", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RangeId, "", new { @class = "text-danger" })
                        </div>

                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Species, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Species, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Species, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-md-2 control-label">Planted Year</label>
                        <div class="col-md-4">
                            @Html.DropDownList("PlantedYear", null, " ", new { @class = "form-control" })
                            @*<select name="PlantedYear" class="form-control" required>
                                <option value=""></option>
                                <option value="1970" >1970</option>
                            </select>*@
                            @Html.ValidationMessageFor(model => model.PlantedYear, "", new { @class = "text-danger" })
                        </div>
                    </div>
          

                    <div class="form-group">
                        <label class="col-md-2 control-label">Area (Ha)</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Area, new { htmlAttributes = new { @class = "form-control", placeholder = "number only" } })
                            @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-md-2 control-label">Volume (CBM)</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.EstimatedVolume, new { htmlAttributes = new { @class = "form-control", placeholder="number only"} })
                            @Html.ValidationMessageFor(model => model.EstimatedVolume, "", new { @class = "text-danger" })
                        </div>
                    </div>

                   

                    <div class="form-group">
                        @Html.LabelFor(model => model.Season, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <select name="Season" class="form-control" required>
                                <option value=""></option>
                                <option value="Dry">Dry</option>
                                <option value="Rain">Rain</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.Season, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-md-2 control-label">Tariff No.</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.TariffNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "number only" } })
                            @Html.ValidationMessageFor(model => model.TariffNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    

                </div>
            <div class="widget-foot">
                <a href="@Url.Action("Index")" class="btn btn-default"><i class="icon-backward"></i> Back</a>
                <button type="submit"  class="pull-right btn btn-primary" ><i class="icon-save"></i> Save</button>
                <div class="clearfix"></div>
            </div>
            </div>
            </div>
            }
    </div>

          
