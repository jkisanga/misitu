@model IEnumerable<Misitu.Activities.Dto.ActivityDto>

@{
    ViewBag.ActiveMenu = "Setup"; //The menu item will be active for this page.
    ViewBag.Title = "Activities";
}


<div class="widget">
    <div class="widget-head">
        <div class="pull-left">Activities</div>
        <div class="pull-right">
            <a href="@Url.Action("Create")">
                <small class="text-info"><i class="icon-plus"></i> Create New</small>
            </a>
        </div>
        <div class="clearfix"></div>
    </div>


    <div class="widget-content">
        <div class="padd">

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayName("Activity Fee")
                        </th>
                        <th>
                            @Html.DisplayName("Registration Fee")
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fee)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegistrationFee)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
        </div>
        </div>
 

